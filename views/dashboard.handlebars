<!--Job Board Start-->
<div class="row">
  <div class="col-md-12">
    <!-- DATA TABLE -->
    <h3 class="title-5 m-b-35">Job Board</h3>

    <div class="table-data__tool">
      <div class="table-data__tool-left">
        <div class="rs-select2--light rs-select2--md">
          <select class="js-select2 select2-hidden-accessible" name="property" tabindex="-1" aria-hidden="true">
            <option selected="selected">All Properties</option>
            <option value="">Option 1</option>
            <option value="">Option 2</option>
          </select>
          <div class="dropDownSelect2"></div>
        </div>
        <div class="rs-select2--light rs-select2--sm">
          <select class="js-select2 select2-hidden-accessible" name="time" tabindex="-1" aria-hidden="true">
            <option selected="selected">Today</option>
            <option value="">3 Days</option>
            <option value="">1 Week</option>
          </select>
          <div class="dropDownSelect2"></div>
        </div>
        <button class="au-btn-filter">
          <i class="zmdi zmdi-filter-list"></i>filters</button>
      </div>
      <div class="table-data__tool-right">
        <!-- Add New Job Button -->
        <button class="au-btn au-btn-icon au-btn--green au-btn--small" type="button" data-toggle="modal"
          data-target="#addJobModal" data-placement="top">
          <i class="zmdi zmdi-plus"></i>add job</button>

        <div class="rs-select2--dark rs-select2--sm rs-select2--dark2">
          <select class="js-select2 select2-hidden-accessible" name="type" tabindex="-1" aria-hidden="true">
            <option selected="selected">Export</option>
            <option value="">Option 1</option>
            <option value="">Option 2</option>
          </select>
          <div class="dropDownSelect2"></div>
        </div>
      </div>
    </div>
    <div class="table-responsive table-responsive-data2">

      <!--Table Start-->

      <table class="table table-data2">
        <!--Table Headers-->
        <thead>
          <tr>
            <th>Position</th>
            <th>Company</th>
            <th>Date added</th>
            <th>status</th>
            <th>Location</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          {{#each jobs as |job|}}
          {{> job-card}}
          {{/each}}
        </tbody>
      </table>
    </div>
    <!-- END DATA TABLE -->
  </div>
</div>

