<!-- Add New Job Modal HTML -->

<div class="modal fade" id="addJobModal" tabindex="-1" role="dialog" aria-labelledby="scrollmodalLabel"
  style="display: none;" aria-hidden="true">
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="scrollmodalLabel"> Add New Job Information Below </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">×</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="card">
          <div class="card-header">
            <strong>Add New Job</strong>
            <small> Form</small>
          </div>

          <div class="card-body card-block">
            <!-- Company Name -->
            <div class="form-group">
              <label for="company" class=" form-control-label">Company <span style="color: red;">*</span></label>
              <input type="text" id="company" placeholder="Enter company name" class="form-control">
            </div>
            <!-- Company Position -->
            <div class="form-group">
              <label for="position" class=" form-control-label">Position <span style="color: red;">*</span></label>
              <input type="text" id="title" placeholder="Enter position title" class="form-control">
            </div>
            <!-- Company Location -->
            <div class="form-group">
              <label for="location" class=" form-control-label">Location <span style="color: red;">*</span></label>
              <input type="text" id="location" placeholder="Enter job location" class="form-control">
            </div>
            <!-- Company Description -->
            <div class="form-group">
              <label for="desc" class=" form-control-label">Description</label>
              <input type="text" id="desc" placeholder="Enter job description (optional)" class="form-control">
            </div>
            <!-- Contact Information -->
            <div class="form-group">
              <label for="contact-info" class=" form-control-label">Contact Information</label>
              <input type="text" id="con-info" placeholder="Enter contact information (optional)" class="form-control">
            </div>
            <!-- Job URL Link -->
            <div class="form-group">
              <label for="url" class=" form-control-label">Job Link</label>
              <input type="text" id="url" placeholder="Enter job posting url (optional)" class="form-control">
            </div>
            <!-- Salary Information -->
            <div class="form-group">
              <label for="salary" class=" form-control-label">Salary</label>
              <input type="text" id="salary" placeholder="Enter salary (optional)" class="form-control">
            </div>
            <!-- Additional Comments -->
            <div class="form-group">
              <label for="comments" class=" form-control-label">Additional Comments</label>
              <input type="text" id="comments" placeholder="Enter any additional comments (optional)" class="form-control">
            </div>
            <!-- Application Status -->
            <div class="form-group">
              <label for="status" class=" form-control-label">Application Status <span style="color: red;">*</span></label>
              <select name="select" id="select" class="form-control">
                <option value="0">Not Started</option>
                <option value="1">In Progress</option>
                <option value="2">Applied</option>
                <option value="3">Interviewing</option>
                <option value="4">Final Interview</option>
                <option value="5">Accepted</option>
                <option value="6">Denied</option>
              </select>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button> -->
        <button id="add-job-button" type="button" class="btn btn-primary">Add Job</button>
      </div>
    </div>
  </div>
</div>




